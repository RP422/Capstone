<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO Add buttons that lead to airplane and airport info -->

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/startingAirportLabel"
                    android:layout_width="175dp"
                    android:layout_height="50dp"
                    android:text="Starting Airport:"
                    android:textColor="?attr/actionMenuTextColor"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/startingAirportTV"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="SAMPLE_TEXT"
                    android:textColor="?attr/actionMenuTextColor"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="@id/startingAirportLabel"
                    app:layout_constraintBottom_toBottomOf="@id/startingAirportLabel"
                    app:layout_constraintLeft_toRightOf="@id/startingAirportLabel"
                    android:layout_marginLeft="10dp"/>

                <ListView
                    android:id="@+id/flightPlanSteps"
                    android:layout_width="wrap_content"
                    android:layout_height="590dp"
                    app:layout_constraintTop_toBottomOf="@id/startingAirportLabel"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Stint"
        android:onClick="addRow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"/>
</android.support.constraint.ConstraintLayout>