<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.capstone.mike.a3_in_1flightmanager.logbook.LogbookNewEntryActivity">

        <!--String checkpointName-->
        <!--int course-->
        <!--int legDistance-->
        <!--int altitude-->
        <!--int trueAirSpeed-->
        <!--int windDirection-->
        <!--int windSpeed-->
        <!--int headingAdjustment-->
        <!--int magneticHeadingAdjustment-->

        <TextView
            android:id="@+id/newRowCheckpointNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Checkpoint Name"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newRowCheckpointName"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/newRowCheckpointName"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/newRowCourseLabel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Course"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/newRowCheckpointNameLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newEntryDatePicker"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/newRowCourse"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/newRowCheckpointName"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_margin="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:onClick="saveEntry"
            app:layout_constraintTop_toBottomOf="@id/newEntryPICTimeET"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="20dp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>