<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.capstone.mike.a3_in_1flightmanager.logbook.LogbookNewEntryActivity">

        <TextView
            android:id="@+id/newRowCheckpointNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Checkpoint Name*"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newRowCheckpointName"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/newRowCheckpointName"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/newRowFreqLabel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Frequency"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/newRowCheckpointNameLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newRowFreq"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/newRowFreq"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/newRowCheckpointName"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/newRowIdentLabel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Identification"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/newRowFreqLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newRowIdent"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/newRowIdent"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/newRowFreq"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/newRowCourseLabel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Course*"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/newRowIdentLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newRowCourse"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/newRowCourse"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/newRowIdent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/newRowLegDistanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Leg Distance*"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/newRowCourseLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newRowLegDistance"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/newRowLegDistance"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/newRowCourse"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/newRowAltitudeLabel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Altitude*"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/newRowLegDistanceLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newRowAltitude"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/newRowAltitude"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/newRowLegDistance"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/newRowTASLabel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="True Air Speed*"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/newRowAltitudeLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newRowTAS"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/newRowTAS"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/newRowAltitude"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/newRowWindDirLabel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Wind Direction*"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/newRowTASLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newRowWindDir"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/newRowWindDir"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/newRowTAS"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/newRowWindSpeedLabel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Wind Speed*"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/newRowWindDirLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newRowWindSpeed"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/newRowWindSpeed"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/newRowWindDir"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/newRowHeadAdjustLabel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Heading Adjustment*"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/newRowWindSpeedLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newRowHeadAdjust"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/newRowHeadAdjust"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:inputType="numberSigned"
            app:layout_constraintTop_toBottomOf="@+id/newRowWindSpeed"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/newRowMagHeadAdjustLabel"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Magnetic\nHeading Adjustment*"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/newRowHeadAdjustLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/newRowMagHeadAdjust"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/newRowMagHeadAdjust"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            android:inputType="numberSigned"
            app:layout_constraintTop_toBottomOf="@+id/newRowHeadAdjust"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="15dp"
            android:layout_margin="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Required Field"
            android:textColor="?attr/actionMenuTextColor"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/newRowMagHeadAdjustLabel"
            app:layout_constraintLeft_toLeftOf="@id/newRowMagHeadAdjustLabel"
            app:layout_constraintRight_toRightOf="@id/newRowMagHeadAdjustLabel"
            android:layout_marginTop="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:onClick="saveRow"
            app:layout_constraintTop_toBottomOf="@+id/newRowMagHeadAdjust"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>